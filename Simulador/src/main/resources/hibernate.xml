<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
	<session-factory>
		<property name="dialect">org.hibernate.dialect.OracleDialect</property>
		<property name="current_session_context_class">thread</property>
		<property name="show_sql">true</property>
		<property name="format_sql">true</property>
		<property name="hibernate.default_schema">BBVATESOR</property>
		<property name="hibernate.connection.release_mode">after_statement</property>

		<mapping class="com.pss.simulador.bs.domain.Emisor" />
		<mapping class="com.pss.simulador.bs.domain.Fondo" />
		<mapping class="com.pss.simulador.bs.domain.General" />
		<mapping class="com.pss.simulador.bs.domain.Infoport" />
		<mapping class="com.pss.simulador.bs.domain.LimFondoEspecie" />
		<mapping class="com.pss.simulador.bs.domain.LimitesEmisor" />
		<mapping class="com.pss.simulador.bs.domain.Perfil" />
		<mapping class="com.pss.simulador.bs.domain.PerfilFondo" />
		<mapping class="com.pss.simulador.bs.domain.Saldo" />
		<mapping class="com.pss.simulador.bs.domain.TipoCambio" />
		<mapping class="com.pss.simulador.bs.domain.Usuario" />



	</session-factory>
</hibernate-configuration>